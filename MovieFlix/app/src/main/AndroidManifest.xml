<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieflix" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_movie_flix"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_movie_flix"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieFlix" >
        <activity android:name=".view.MovieDetailActivity"/>
        <activity android:name=".view.MainActivity"/>
        <activity android:name="com.example.login.login.view.LoginActivity"/>
        <activity android:name=".view.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>